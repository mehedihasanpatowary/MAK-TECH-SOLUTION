<odoo>
    <data>
        <record id="view_bd_team_tree" model="ir.ui.view">
            <field name="name">bd.team.list</field>
            <field name="model">bd.team</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <record id="view_bd_team_form" model="ir.ui.view">
            <field name="name">bd.team.form</field>
            <field name="model">bd.team</field>
            <field name="arch" type="xml">
                <form string="Sales Team">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bd_team" model="ir.actions.act_window">
            <field name="name">Teams</field>
            <field name="res_model">bd.team</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_bd_team_root"
                  name="Team"
                  parent="bd_others_menu_id"
                  action="action_bd_team"
                  sequence="0"/>

    </data>
</odoo>
