<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_order_source_tree" model="ir.ui.view">
        <field name="name">bd.order.source.list</field>
        <field name="model">bd.order.source</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>


    <record id="view_order_source_form" model="ir.ui.view">
        <field name="name">bd.order.source.form</field>
        <field name="model">bd.order.source</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_order_source" model="ir.actions.act_window">
        <field name="name">Order Sources</field>
        <field name="res_model">bd.order.source</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_order_source_root" 
              name="Order Source" 
              parent="bd_others_menu_id" 
              action="action_order_source"
              sequence="20"/>
              
</odoo>
