<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_assign_team_tree" model="ir.ui.view">
            <field name="name">bd.assign.team.list</field>
            <field name="model">bd.assign.team</field>
            <field name="arch" type="xml">
                <list string="Sales Teams">
                    <field name="name"/>
                    <field name="leader_id"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <record id="view_assign_team_form" model="ir.ui.view">
            <field name="name">bd.assign.team.form</field>
            <field name="model">bd.assign.team</field>
            <field name="arch" type="xml">
                <form string="Sales Team">
                    <sheet>
                        <group>
                           <field name="name" string="Name"/>
                            <field name="leader_id"/>
                            <field name="members_ids" widget="many2many_tags"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bd_team" model="ir.actions.act_window">
            <field name="name">Sales Teams</field>
            <field name="res_model">bd.assign.team</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_assign_team_tree"/>
        </record>
        

        <menuitem 
            id="menu_bd_team_root" 
            name="Assign Team" 
             parent="hr.menu_human_resources_configuration" 
            action="action_bd_team" 
            sequence="501"/>
            
    </data>
</odoo>
