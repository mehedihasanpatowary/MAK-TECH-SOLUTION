<odoo>
    <data>

        <record id="view_platform_source_tree" model="ir.ui.view">
            <field name="name">bd.platform.source.list</field>
            <field name="model">bd.platform.source</field>
            <field name="arch" type="xml">
                <list string="Platform / Lead Source">
                    <field name="name"/>
                   
                </list>
            </field>
        </record>

        <record id="view_platform_source_form" model="ir.ui.view">
            <field name="name">bd.platform.source.form</field>
            <field name="model">bd.platform.source</field>
            <field name="arch" type="xml">
                <form string="Platform / Lead Source">
                    <sheet>
                        <group>
                            <field name="name"/>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_platform_source" model="ir.actions.act_window">
            <field name="name">Platform / Lead Source</field>
            <field name="res_model">bd.platform.source</field>
            <field name="view_mode">list,form</field>
        </record>
        
        <menuitem id="menu_bd_platform_source"
                  name="Platform Source"
                  parent="bd_others_menu_id"
                  action="action_platform_source"
                  sequence="10"/>

    </data>
</odoo>
